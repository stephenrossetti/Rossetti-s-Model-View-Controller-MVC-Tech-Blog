<img src="images/tech-blog-img2.jpg" alt="Convention Image">
<div class="row justify-space-between-md">
  <div class="create-card">
    <h2 class="page-title">Create a Blog Post:</h2>
    <form class="form new-post-form">
      <div class="form-group">
        <label for="post-topic">Post Topic:</label>
        <input class="form-input" type="text" id="post-topic" name="post-topic" />
      </div>
      <div class="form-group">
        <label for="post-desc">Post Description:</label>
        <textarea class="form-input" id="post-desc" name="post-desc"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>

  {{#if posts.length}}
  <div class="create-card">
    <h2>Current Posts:</h2>
    {{#each posts as |post|}}
    <div class="row mb-3 delete-post">
      <div class="col-md-6">
        <a href="/post/{{post.id}}">{{truncate post.topic 15}}</a>
      </div>
      <div class="col-md-3">
        <button class="btn btn-sm btn-danger delete-post-btn" data-id="{{post.id}}">Delete</button>
      </div>
      <div class="col-md-3">
        <a href="/dashboard/{{post.id}}" class="btn btn-sm btn-success">Edit</a>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="/js/post.js"></script>